<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.securemsg">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:label="SecureMsg"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name="com.example.securemsg.SignupActivity" />
        <activity android:name="com.example.securemsg.ImageStreamActivity" />
        <activity android:name="com.example.securemsg.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
